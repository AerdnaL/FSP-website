---
// Header.astro
---

<header class="header">
  <div class="container">
    <nav class="navigation">
      <div class="nav-left">
        <a href="/" class="logo-link">
          <img src="../public/images/remove-background-project.png" alt="Logo" class="logo" />
        </a>
      </div>
      <div class="nav-right">
        <ul class="nav-list">
          <li><a href="/corsi" class="nav-link">Corsi</a></li>
          <li><a href="/eventi" class="nav-link">Eventi</a></li>
          <li><a href="/storia" class="nav-link">Storia</a></li>
          <li><a href="/banda" class="nav-link">Banda</a></li>
          <li><a href="/news" class="nav-link">News</a></li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: #2A3A5E;
    padding: 1rem 2rem;
    border-bottom: 2px solid #1e2a42;
    width: 100%;
    position: fixed;
    left: 0;
    z-index: 1000;
  }

  .navigation {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .nav-left {
    flex-shrink: 0;
  }

  .logo {
    height: 50px;
    width: auto;
  }

  .nav-right {
    flex-shrink: 0;
    margin-left: auto;
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: white;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .header {
      padding: 1rem;
    }
    
    .navigation {
      flex-direction: column;
      gap: 1rem;
    }
    
    .nav-left, .nav-right {
      width: 100%;
    }
    
    .nav-list {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .nav-link {
      display: block;
      text-align: center;
    }
  }
</style>