---
// Header.astro
---

<header class="header">
  <nav class="navigation">
    <ul class="nav-list">
      <li><a href="/" class="nav-link">Home</a></li>
      <li><a href="/corsi" class="nav-link">Corsi</a></li>
      <li><a href="/eventi" class="nav-link">Eventi</a></li>
      <li><a href="/storia" class="nav-link">Storia</a></li>
      <li><a href="/banda" class="nav-link">Banda</a></li>
    </ul>
  </nav>
</header>

<style>
  .header {
    background-color: #2A3A5E;
    padding: 1rem 2rem;
    border-bottom: 2px solid #1e2a42;
  }

  .navigation {
    max-width: 1200px;
    margin: 0 auto;
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-link {
    text-decoration: none;
    color: white;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .header {
      padding: 1rem;
    }
    
    .nav-list {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .nav-link {
      display: block;
      text-align: center;
    }
  }
</style>