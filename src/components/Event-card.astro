---
export interface Props {
  imageSrc: string;
  imageAlt: string;
  href: string;
  title: string;
  date: string;
  location: string;
}

const { imageSrc, imageAlt, href, title, date, location } = Astro.props;
---

<a href={href} class="card"> 
    <img src={imageSrc} alt={imageAlt} />
    <div class="info">
        <h1>{title}</h1>
        <p>{date}, {location}</p>
    </div>
</a>

<style>
    /* 1. STRUTTURA BASE DELLA CARD */
    .card {
        text-decoration: none;
        color: inherit;
        grid-column: span 4;
        aspect-ratio: 5 / 7;
        border-radius: 15px;
        padding: 1.5rem;
        background: #ccc;
        position: relative;
        display: flex;
        align-items: flex-end;
        transition: transform 0.4s ease-out, box-shadow 0.4s ease-out;
        box-shadow: 0px 7px 10px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        -webkit-tap-highlight-color: transparent;
    }

    /* Immagine di sfondo */
    .card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
        transition: transform 0.5s ease;
    }

    .card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.2) 60%, rgba(0, 0, 0, 0) 100%);
        z-index: 2;
        transition: opacity 0.5s ease;
    }

    .card .info {
        position: relative;
        z-index: 3;
        color: white;
        width: 100%;
        transition: transform 0.5s ease, opacity 0.5s ease;
    }

    .card .info h1 {
        margin: 0;
        font-size: clamp(1.25rem, 5vw, 2.2rem); 
        line-height: 1.1;
        font-weight: 700;
    }

    .card .info p {
        margin-top: 8px;
        letter-spacing: 0.5px;
        font-size: clamp(0.85rem, 2vw, 1.1rem);
        opacity: 0.9;
    }

    @media (hover: hover) and (min-width: 993px) {
        .card::before {
            opacity: 0;
        }
        .card .info {
            opacity: 0;
            transform: translateY(20px);
        }

        .card:hover {
            transform: translateY(-12px);
            box-shadow: 0px 15px 25px rgba(0, 0, 0, 0.4);
        }
        .card:hover::before {
            opacity: 1;
        }
        .card:hover .info {
            opacity: 1;
            transform: translateY(0);
        }
        .card:hover img {
            transform: scale(1.05);
        }
    }

    
    @media (max-width: 992px), (hover: none) {
        .card {
            grid-column: span 6;
        }
        .card::before {
            opacity: 1;
        }
        .card .info {
            opacity: 1;
            transform: translateY(0);
        }
        
        .card:active {
            transform: scale(0.97);
            transition: 0.1s;
        }
    }

    @media (max-width: 576px) {
        .card {
            grid-column: span 12;
            padding: 1rem;
        }
    }
</style>