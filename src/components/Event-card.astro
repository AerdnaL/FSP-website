---
export interface Props {
  imageSrc: string;
  imageAlt: string;
  href: string;
  title: string;
  date: string;
  location: string;
}

const { imageSrc, imageAlt, href, title, date, location } = Astro.props;
---

<div class="card"> 
	<img src={imageSrc} alt={imageAlt} />
	<div class="info">
		<h1>{title}</h1>
		<p>{date}, {location}</p>
		<a href={href} class="button">Scopri</a>
	</div>
</div>

<style>

	.card {
			grid-column: span 4;
			aspect-ratio: 5 / 7;
			border-radius: 15px;
			padding: 1.5rem;
			background: white;
			position: relative;
			display: flex;
			align-items: flex-end;
			transition: 0.4s ease-out;
			box-shadow: 0px 7px 10px rgba(0, 0, 0, 0.5);
	}

	.card:hover {
			transform: translateY(20px);
	}

	.card:hover::before {
			opacity: 1;
	}

	.card:hover .info {
			opacity: 1;
			transform: translateY(0px);
	}

	.card::before {
			content: "";
			position: absolute;
			top: 0;
			left: 0;
			display: block;
			width: 100%;
			height: 100%;
			border-radius: 15px;
			background: rgba(0, 0, 0, 0.6);
			z-index: 2;
			transition: 0.5s;
			opacity: 0;
	}

	.card img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			position: absolute;
			top: 0;
			left: 0;
			border-radius: 15px;
	}

	.card .info {
			position: relative;
			z-index: 3;
			color: white;
			opacity: 0;
			transform: translateY(30px);
			transition: 0.5s;
	}

	.card .info h1 {
			margin: 0px;
	}

	.card .info p {
			letter-spacing: 1px;
			font-size: 15px;
			margin-top: 8px;
	}


</style>