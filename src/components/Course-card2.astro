---
interface Props {
  title: string;
  imageSrc: string;
  imageAlt: string;
  href: string;
  description?: string;
  duration?: string;
  instructor?: string;
}

const { 
  title, 
  imageSrc, 
  imageAlt, 
  href, 
  description = "No description available",
  duration = "Not specified",
  instructor = "TBD",
} = Astro.props;

// Generate unique ID for this component instance
const modalId = title.toLowerCase().replace(/\s+/g, '-');
---

<div class="course-card-wrapper">
  <button class="course-card" data-modal-target={modalId}>
    <img src={imageSrc} alt={imageAlt}>
    <h3>{title}</h3>
  </button>

  <!-- Modal -->
  <dialog class="course-modal" id={modalId}>
    <div class="modal-content">
      <div class="modal-header">
        <h2>{title}</h2>
        <button class="close-btn" data-modal-close={modalId}>Ã—</button>
      </div>
      
      <div class="modal-body">
        <img src={imageSrc} alt={imageAlt} class="modal-image">
        
        <div class="course-info">
          <p class="description">{description}</p>
          
          <div class="course-details">
            <div class="detail-item">
              <strong>Istruttore:</strong> {instructor}
            </div>
            <div class="detail-item">
              <strong>Ore Settimanali:</strong> {duration}
            </div>
          </div>
          
          <div class="modal-actions">
            <button class="close-modal-btn" data-modal-close={modalId}>Close</button>
          </div>
        </div>
      </div>
    </div>
  </dialog>
</div>

<style>
  .course-card-wrapper {
    position: relative;
    grid-column: span 3;
  }

  .course-card {
    grid-column: span 3;
    aspect-ratio: 1;
    border-radius: 16px;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    display: block;
    text-decoration: none;
    color: inherit;
    border: none;
    background: none;
    padding: 0;
    width: 100%;
  }

  .course-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;
    z-index: 1;
  }

  .course-card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 2;
    transition: background-color 0.3s ease;
  }

  .course-card:hover::after {
    background-color: rgba(0, 0, 0, 0.3);
  }

  .course-card h3 {
    position: absolute;
    bottom: 20px;
    left: 20px;
    z-index: 3;
    color: white;
    margin: 0;
    font-size: 1.2rem;
    font-weight: bold;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .course-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 16px;
  }

  /* Modal Styles */
  .course-modal {
    border: none;
    border-radius: 12px;
    padding: 0;
    width: 90vw;
    max-width: 1200px;
    max-height: 80vh;
    overflow-y: auto;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    margin: auto;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .course-modal[open] {
    display: flex;
    flex-direction: column;
  }

  .course-modal::backdrop {
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    padding: 0;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 24px;
    border-bottom: 1px solid #e5e7eb;
  }

  .modal-header h2 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
    color: #1f2937;
  }

  .close-btn {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #6b7280;
    padding: 4px;
    line-height: 1;
    border-radius: 4px;
    transition: background-color 0.2s ease;
  }

  .close-btn:hover {
    background-color: #f3f4f6;
    color: #374151;
  }

  .modal-body {
    padding: 24px;
  }

  .modal-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 20px;
  }

  .description {
    font-size: 1rem;
    line-height: 1.6;
    color: #4b5563;
    margin-bottom: 20px;
  }

  .course-details {
    background-color: #f9fafb;
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 24px;
  }

  .detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .detail-item:last-child {
    border-bottom: none;
  }

  .detail-item strong {
    color: #374151;
    font-weight: 600;
  }

  .modal-actions {
    display: flex;
    gap: 12px;
    justify-content: flex-end;
  }

  .enroll-btn {
    background-color: #3b82f6;
    color: white;
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.2s ease;
  }

  .enroll-btn:hover {
    background-color: #2563eb;
  }

  .close-modal-btn {
    background-color: #6b7280;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.2s ease;
  }

  .close-modal-btn:hover {
    background-color: #4b5563;
  }

  @media (max-width: 768px) {
    .course-modal {
      width: 95vw;
      max-height: 90vh;
    }
    
    .modal-actions {
      flex-direction: column;
    }
    
    .enroll-btn,
    .close-modal-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>

<script>
  // Modal functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Open modal
    document.querySelectorAll('[data-modal-target]').forEach((button: Element) => {
      button.addEventListener('click', function(this: HTMLElement) {
        const modalId = this.getAttribute('data-modal-target');
        if (modalId) {
          const modal = document.getElementById(modalId) as HTMLDialogElement;
          if (modal) {
            modal.showModal();
          }
        }
      });
    });

    // Close modal
    document.querySelectorAll('[data-modal-close]').forEach((button: Element) => {
      button.addEventListener('click', function(this: HTMLElement) {
        const modalId = this.getAttribute('data-modal-close');
        if (modalId) {
          const modal = document.getElementById(modalId) as HTMLDialogElement;
          if (modal) {
            modal.close();
          }
        }
      });
    });

    // Close modal when clicking outside
    document.querySelectorAll('.course-modal').forEach((modal: Element) => {
      const dialogModal = modal as HTMLDialogElement;
      dialogModal.addEventListener('click', function(this: HTMLDialogElement, e: MouseEvent) {
        if (e.target === this) {
          this.close();
        }
      });
    });

    // Close modal with Escape key (already handled by browser, but added for completeness)
    document.addEventListener('keydown', function(e: KeyboardEvent) {
      if (e.key === 'Escape') {
        document.querySelectorAll('.course-modal[open]').forEach((modal: Element) => {
          (modal as HTMLDialogElement).close();
        });
      }
    });
  });
</script>