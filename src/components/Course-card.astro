---
interface Props {
    title: string;
    imageSrc: string;
    imageAlt: string;
    href: string;
}

const { title, imageSrc, imageAlt, href } = Astro.props;
---

<a href={href} class="course-card">
    <div class="image-container">
        <img src={imageSrc} alt={imageAlt}>
    </div>
    <div class="overlay"></div>
    <h3>{title}</h3>
</a>

<style>
    .course-card {
        grid-column: span 3;
        aspect-ratio: 1;
        border-radius: 16px;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        display: block; 
        text-decoration: none; 
        color: inherit;
        background-color: #000; /* Fondo nero per evitare flash bianchi durante il caricamento */
        
        /* Animazione di base per la card */
        transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), 
                    box-shadow 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    /* Contenitore per isolare lo zoom dell'immagine */
    .image-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .course-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.5s ease; /* Transizione morbida per lo zoom */
    }

    /* Overlay pi√π moderno con gradiente invece che colore solido */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            to bottom, 
            rgba(0,0,0,0.1) 0%, 
            rgba(0,0,0,0.7) 100%
        );
        z-index: 2;
        transition: opacity 0.3s ease;
    }

    .course-card h3 {
        position: absolute;
        bottom: 20px;
        left: 20px;
        right: 20px; /* Aggiunto per evitare che il testo esca dai bordi */
        z-index: 3; 
        color: white;
        margin: 0;
        /* Tipografia fluida */
        font-size: clamp(1rem, 4vw, 1.5rem);
        font-weight: bold;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
        transition: transform 0.3s ease;
    }

    /* --- ANIMAZIONI HOVER (Solo per Desktop) --- */
    @media (hover: hover) {
        .course-card:hover {
            transform: translateY(-8px); /* Sollevamento card */
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
        }

        .course-card:hover img {
            transform: scale(1.1); /* Zoom dell'immagine */
        }

        .course-card:hover h3 {
            transform: translateY(-5px); /* Il testo si alza leggermente */
        }

        .course-card:hover .overlay {
            background: linear-gradient(
                to bottom, 
                rgba(0,0,0,0.2) 0%, 
                rgba(0,0,0,0.8) 100%
            );
        }
    }

    /* --- FEEDBACK TOUCH (Mobile) --- */
    @media (hover: none) {
        .course-card:active {
            transform: scale(0.96);
            transition: 0.1s;
        }
    }

    /* Breakpoint per le colonne come nelle card precedenti */
    @media (max-width: 992px) {
        .course-card {
            grid-column: span 6;
        }
    }
    @media (max-width: 576px) {
        .course-card {
            grid-column: span 12;
        }
    }
</style>