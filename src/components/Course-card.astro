---
interface Props {
    title: string;
    imageUrl: string;
}

const { title, imageUrl } = Astro.props;
---

<div class="course-card" data-image={imageUrl}>
    <h3>{title}</h3>
</div>

<style>
    .course-card {
        width: 250px;
        height: 250px;
        border-radius: 16px;
        position: relative;
        overflow: hidden;
    }

    .course-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: var(--bg-image);
        background-size: cover;
        background-position: center;
        z-index: 1;
    }

    .course-card::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 2;
    }

    h3 {
        position: absolute;
        bottom: 30px;
        left: 20px;
        color: white;
        margin: 0;
        z-index: 3;
        font-size: 1.25rem;
    }
</style>

<script>
    // Set background image dynamically
    document.addEventListener('DOMContentLoaded', () => {
        const cards = document.querySelectorAll('.course-card');
        cards.forEach(card => {
            const imageUrl = card.getAttribute('data-image');
            (card as HTMLElement).style.setProperty('--bg-image', `url(${imageUrl})`);
        });
    });
</script>