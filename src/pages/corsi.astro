---
import Layout from '../layouts/Layout.astro';
import CourseCard from '../components/Course-card.astro';
---

<Layout title='pagina-corsi'>
    <div class="home-container">
        <div class="grid">
            <div class="col-12">
                <h1 class="corsi-heading">I nostri Corsi</h1>
            </div>
            <div class="col-3">
                <h2>Settore Classico</h2>
                <CourseCard
                    title="Nome del Corso"
                    imageUrl="./public/images/wes-hicks-MEL-jJnm7RQ-unsplash.jpg"
                />
            </div>
            <div class="col-3">
                <h2>Settore Moderno</h2>
            </div>
            <div class="col-3">
                <h2>Canto</h2>
            </div>
            <div class="col-3">
                <h2>Propedeutica</h2>
            </div>
        </div>
    </div>
</Layout>