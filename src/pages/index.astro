<style>

  /* COMMON STYLES */ 

  .container-immagine-laterale {
    grid-column: span 6;
  }

  .container-immagine-laterale img {
    width: 100%;
    height: auto;
    display: block;
    max-width: 100%;
    border-radius: 16px;
  }

  .container-testo-laterale {
    grid-column: span 6;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-between;
  }

  .container-testo-laterale h2 {
    margin: 0;
    padding: 0;
    align-self: flex-start;
  }

  .container-testo-laterale p {
    flex-grow: 1;
    margin: 20px 0 0 0;
  }

  .container-bottoni-laterale {
    margin-top: auto; 
    display: flex;
    gap: 15px; 
    align-self: flex-start; 
  }

  /* EVENTI SECTION*/

  .section-eventi {
    background-color: orange;
    position: relative;
  }

  .custom-shape-divider-top-1759771616 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
  }

  .custom-shape-divider-top-1759771616 svg {
      position: relative;
      display: block;
      width: calc(100% + 1.3px);
      height: 100px;
  }

  .custom-shape-divider-top-1759771616 .shape-fill {
      fill: #ffffff;
  }

  .custom-shape-divider-bottom-1759769856 {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
  }

  .custom-shape-divider-bottom-1759769856 svg {
      position: relative;
      display: block;
      width: calc(100% + 1.3px);
      height: 100px;
  }

  .custom-shape-divider-bottom-1759769856 .shape-fill {
      fill: #ffffff;
  }

  /* BANDA SECTION */

  .section-banda {
    background-image: url('../public/images/banda-background-placeholder.jpg');
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
  }

  .section-banda::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5); 
  }

  .section-banda h2 {
    grid-column: 1 / -1;
    text-align: center;
    color: white;
    position: relative;
  }

  .section-banda p {
    color: white;
    position: relative;
  }

  .section-banda .container-bottoni {
    position: relative;
  }

  .container-testo-banda {
    grid-column: 2 / span 10;
    text-align: center;
  }

</style>
