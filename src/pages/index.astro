<style>

  /* COMMON STYLES */ 

  .section-hero, .section-about, .section-eventi, .section-banda, .section-corsi-above, .section-corsi-below, .section2-corsi, .section-news {
    width: 100vw;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem 0;
  }

  .container-immagine-laterale {
    grid-column: span 6;
  }

  .container-immagine-laterale img {
    width: 100%;
    height: auto;
    display: block;
    max-width: 100%;
    border-radius: 16px;
  }

  .container-testo-laterale {
    grid-column: span 6;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-between;
  }

  .container-testo-laterale h2 {
    margin: 0;
    padding: 0;
    align-self: flex-start;
  }

  .container-testo-laterale p {
    flex-grow: 1;
    margin: 50px 0 0 0;
  }

  .container-bottoni-laterale {
    margin-top: auto; 
    display: flex;
    gap: 15px; 
    align-self: flex-start; 
  }

  /* BANDA SECTION */

  .section-banda {
    background-image: url('../public/images/banda-background-placeholder.jpg');
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
  }

  .section-banda::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5); 
  }

  .section-banda h2 {
    grid-column: 1 / -1;
    text-align: center;
    color: white;
    position: relative;
  }

  .section-banda p {
    color: white;
    position: relative;
  }

  .section-banda .container-bottoni {
    position: relative;
  }

  .container-testo-banda {
    grid-column: 2 / span 10;
    text-align: center;
  }

</style>
