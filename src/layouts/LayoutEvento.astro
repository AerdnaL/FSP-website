---
import Layout from "./Layout.astro"
import '../styles/global.css';

const { eventTitle, eventDate, eventLocation, imageSrc, imageAlt } = Astro.props;
---

<Layout title="evento">
    <section class="event-title content-section">
        <div class="content-container">
            <h1>{eventTitle}</h1>
            <h3>{eventDate}</h3>
            <h3>{eventLocation}</h3>
        </div>
    </section>
    <section class="event-body content-section">
        <div class="content-container">
            <p><slot /></p>
            <img src={imageSrc} alt={imageAlt} />
        </div>
    </section>
</Layout>

<style>

    .content-container h1, h3 {
        grid-column: 1 / -1;
    }

    .content-container h1 {
        font-size: 4rem;
    }

    .event-body p {
        grid-column: span 6;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .event-body img {
        grid-column: span 6;
        width: 100%;
        height: auto;
        display: block;
        margin-bottom: 2rem;
        border-radius: 8px;
    }
    
</style>